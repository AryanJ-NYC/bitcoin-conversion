{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AryanJ-NYC/bitcoin-conversion"
  },
  "bugs": {
    "url": "https://github.com/AryanJ-NYC/bitcoin-conversion/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "bitcoin-conversion",
  "author": "Aryan Jabbari",
  "module": "dist/bitcoin-conversion.esm.js",
  "size-limit": [
    {
      "path": "dist/bitcoin-conversion.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/bitcoin-conversion.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "currency.js": "^2.0.3",
    "decimal.js-light": "^2.5.1",
    "isomorphic-unfetch": "^3.1.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^4.3.5",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "keywords": [
    "bitcoin",
    "btc",
    "conversion",
    "satoshis",
    "sats",
    "fiat",
    "currency"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
